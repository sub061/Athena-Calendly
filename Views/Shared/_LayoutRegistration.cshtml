@using Medical_Athena_Calendly.CommonServices
@using Microsoft.Extensions.Options
@inject IOptions<AppSettings> AppSettings
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
     <link rel="stylesheet" href="~/css/login.css"/>
    <link rel="stylesheet" href="~/lib/admin-lte/css/adminlte.css" />



    <link rel="stylesheet" href="~/Medical_Athena_Calendly.styles.css" asp-append-version="true" />
</head>
<body class="hold-transition register-page">
    <div class="register-box">
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a href="" class="h5">@AppSettings.Value.ProjectName<b></a>
            </div>
            <div class="card-body">
                @RenderBody()
                </div>
        </div>
    </div>
    <footer class="footer text-muted">
        <div class="container">
            &copy; 2023 - @AppSettings.Value.ProjectName <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
