@model Medical_Athena_Calendly.Models.User

@{
    Layout = "_LayoutRegistration";
    var user = ViewData["CalendlyUser"];
    var calendlyUser = user.ToString();
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registration</title>
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <div class="login-box-msg">

        @if (calendlyUser == "nihar")
        {

            <img src="/img/Ganju-Logo.png" class="brand-image" style="opacity:.8;margin-right:10px; height: 50px;
    width: 45px;">
        }
        else if (calendlyUser == "hirsch")
        {

            <img src="/img/HH Logo.jpg" class="brand-image" style="opacity:.8;margin-right:10px; height: 50px;
    width: 45px;">
        }


    </div>
    <p class="login-box-msg">Register a new membership</p>

    <form asp-action="Index">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="input-group mb-3">
            @* <label asp-for="Email" class="control-label"></label>*@
            <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="input-group mb-3">
            @* <label asp-for="Name" class="control-label"></label>*@
            <input asp-for="Name" class="form-control" placeholder="Full Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="input-group mb-3">
            @*  <label asp-for="Password" class="control-label"></label>*@
            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="input-group mb-3">
            @*  <label asp-for="Password" class="control-label"></label>*@
            <input asp-for="Password" type="password" class="form-control" placeholder="Confirm Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="social-auth-links text-start">
            <input type="checkbox" id="agreeTerms" name="terms" value="agree">
            <label for="agreeTerms">
                I agree to the <a href="#">terms</a>
            </label>
        </div>

        <div class="social-auth-links text-center">
            <button type="submit" asp-action="Register" class="btn btn-primary btn-block">Register</button>
        </div>

    </form>
    <div class="social-auth-links text-start mt-4">
        @* <a href="#" class="btn btn-block btn-primary">
        <i class="fab fa-facebook mr-2"></i>
        Sign up using Facebook
        </a> *@
        <a href="#" class="btn google-pluse btn-block btn-danger">
            <img src="../img/google-plus-g.svg">
            Sign up using Google+
        </a>
    </div>
    <p class="mt-3"><a asp-action="Index" asp-controller="Login" class="text-center">I already have a membership</a></p>
    </div>




    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
